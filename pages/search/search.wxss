#viewSearch {
  position: relative;
  background: #eee;
  height: 120rpx;
}

#icon {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 65rpx;
  height: 65rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
  text-indent: -999px;
  z-index: 2;
}
.placeholder{
  text-indent: 0rpx;
}
#viewHotSearch{
  width: 100vw;
  height: auto;
  display: flex;
  flex-direction:row;
  justify-content:left;
  flex-wrap:wrap;
}
#viewHotSearch view{
  margin-left: 20rpx;
  margin-top: 20rpx;
  padding: 30rpx;
  border-radius: 99rpx;
  border: 1px solid red;
  font-size: 30rpx;
}
#inputSearch {
  padding-left:100rpx;
  width: 600rpx;
  height: 80rpx;
  background: white;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -350rpx;
  margin-top: -40rpx;
  border-radius: 5px;
}
#btnCancel{
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  z-index: 3;
  background:#eee;
}
#songList{
  width: 600rpx;
  height: 100rpx;
  background: white;
  border: 1px solid #eee;
  margin-left: 50rpx;
  margin-top: 20rpx;
  padding-left:50rpx; 
}
#songName{
  font-size: 35rpx;
  white-space:nowrap;
}
#artistName{
  font-size: 30rpx;
  color: #aaa;
}

.songDetails{
  position: relative;
  background: #000;
  color: white;
  text-align: center;
  white-space:nowrap;
  width: 100vw;
  height: 100vh;
}
.songName,.songerName{
    position: relative;
    top: 50rpx;
}
.songerName{
  font-size:30rpx; 
  color: #eee;
}
.songDetailsPic{
  width: 300rpx;
  height: 300rpx;
  border-radius:50%;
  position: absolute;
  left: 50%;
  top: 180rpx;
  margin-left: -150rpx;
}
.songrImgAnimation{
  animation:animationPic 8s linear infinite; 
}
.player{
  width: 100rpx;
  height:100rpx;
  position: absolute;
  left: 50%;
  top: 330rpx;
  margin-left: -50rpx;
  margin-top: -50rpx;
  color:white;
}
@keyframes animationPic{
  0%{ transform: rotate(0deg);}
  100%{ transform: rotate(360deg);}
}
#lyricBox{
  /* border: 1px solid red; */
  width: 80vw;
  height: 600rpx;
  margin: 0 auto;
  position: absolute;
  top: 500rpx;
  left: 50%;
  margin-left: -40vw;
  white-space:normal;
  overflow: hidden;
}
#lyricBox #layric{
  max-height: 45rpx;
  margin-top: 10rpx;
  font-size: 29rpx;
  white-space:nowrap;
}
.nowHightLightLayric{
  color: yellow !important;
}

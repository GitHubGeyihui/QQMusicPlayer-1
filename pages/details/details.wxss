#lyricBody{
  width: 80vw;
  position: absolute;
  top: -45rpx;
  left: 50%;
  margin-left: -40vw;
  transition:1s ease;
  white-space:normal;
  overflow: hidden;
}
#slider{
  position: absolute;
  bottom: 20rpx;
  width: 80vw;
  left: 50%;
  margin-left: -40vw;
}
